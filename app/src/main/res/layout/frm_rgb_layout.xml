<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <com.larswerkman.holocolorpicker.ColorPicker
            android:id="@+id/colorPicker"
            android:layout_width="wrap_content"
            android:layout_height="150dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:useDefaultMargins="false"
            android:id="@+id/grid_color_buttons"
            android:layout_gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:id="@+id/frame_1">

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="at.markushi.ui.CircleButton"
                    android:id="@+id/btn_color_1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/ic_action_tick"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:longClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:id="@+id/frame_2">

                <view
                    class="at.markushi.ui.CircleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_color_2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/ic_action_tick"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:longClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:id="@+id/frame_3">

                <view
                    class="at.markushi.ui.CircleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_color_3"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:src="@drawable/ic_action_tick"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:longClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:id="@+id/frame_4">

                <view
                    class="at.markushi.ui.CircleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_color_4"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:src="@drawable/ic_action_tick"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:longClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:id="@+id/frame_5">

                <view
                    class="at.markushi.ui.CircleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_color_5"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:src="@drawable/ic_action_tick"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:longClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:id="@+id/frame_6">

                <view
                    class="at.markushi.ui.CircleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_color_6"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:src="@drawable/ic_action_tick"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:longClickable="true" />
            </FrameLayout>
        </GridLayout>

    </LinearLayout>

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.larswerkman.holocolorpicker.ValueBar"
        android:id="@+id/valueBar"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>